@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}


<link href="~/css/log.css" rel="stylesheet" />




<div class="sidenav mt-1" style="background-color: #192d50">
    <div class="login-main-text" style="color: #d6c3a5">
        <h2>Application<br> Register Page</h2>
        <p>Login or register from here to access.</p>
    </div>
</div>




<div class="row mt-3 mb-5" style="margin-bottom:50px">
    <div class="@*col-md-4*@ pl-4 ml-3 pb-3 float-left" style="border: solid 2px #36454F; width: 49%; background-color: #4f6073;color:white" >
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4 class="pt-3 font-weight-bold" >Create a new account</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.FirstName"></label>
                <input asp-for="Input.FirstName" class="form-control"style=" width: 330px;" />
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.LastName"></label>
                <input asp-for="Input.LastName" class="form-control" style=" width: 330px;"/>
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Address"></label>
                <input asp-for="Input.Address" class="form-control"style=" width: 330px;" />
                <span asp-validation-for="Input.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.UserName"></label>
                <input asp-for="Input.UserName" class="form-control" style=" width: 330px;"/>
                <span asp-validation-for="Input.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control"style=" width: 330px;" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control"style=" width: 330px;" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" style=" width: 330px;"/>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="button  btn-black " style="border-radius:90px">Register</button>
        </form>
    </div>
    <div class="@*col-xs-6 col-md-6*@ float-right pt-5" style="border: solid 2px black; background-color: #5d6d80; width: 49% ">
        <div class="center text-white">
            <h1 style="padding-top:100px">Already have an account?</h1>
            <p>Sign in now</p>

            <button class="button btn-black ghost " onclick="window.location.href='/Identity/Account/Login'">Sign in</button>
        </div>

    </div>
