    <section id="products" >
        <div class="container-fluid">
        <aside class="col-sm-4" >
            <div class="card float-left" >
                <article class="card-group-item" style="background-color: #25447a">
                    <header class="card-header" ><h3 class="title text-center">What are you looking for? </h3></header>
                    <div class="filter-content">

                        <form asp-controller="Attraction" asp-action="Index" method="get" class="pl-5">
                            <p>
                                <input id="ip4" type="text" placeholder="Category" name="searchStringCategoryName" />

                                <br />  <input id="ip2" type="submit" value="Search">
                            </p>

                        </form>
                        <header class="card-header"><h4 class="title text-center">Categories</h4></header>
                        <div class="list-group list-group-flush text-center pb-3 mb-5">
                            <a  href="/Attraction?searchStringCategoryName=monument" class="list-group-item"> <strong>Monuments</strong> </a>
                            <a href="/Attraction?searchStringCategoryName=muesum" class="list-group-item"><strong>Museums</strong> </a>
                            <a href="/Attraction?searchStringCategoryName=art+gallery" class="list-group-item"><strong>Art Calleries  </strong> </a>
                            <a href="/Attraction?searchStringCategoryName=ski+holiday" class="list-group-item"><strong>Winter Holidays</strong> </a>
                            <a href="/Attraction?searchStringCategoryName=beach+holiday" class="list-group-item"><strong>Summer Holidays</strong> </a>
                            <a href="/Attraction?searchStringCategoryName=cave" class="list-group-item"><strong>Caves</strong> </a>
                            <a href="/Attraction?searchStringCategoryName=lake" class="list-group-item"><strong>Lakes </strong> </a>
                            <a href="/Attraction?searchStringCategoryName=natural+resort" class="list-group-item"><strong>Natural Resorts</strong> </a>
                            <a href="/Attraction?searchStringCategoryName=fortress" class="list-group-item"><strong>Fortresses </strong>  </a>
                            <a href="/Attraction?searchStringCategoryName=church" class="list-group-item"><strong>Churches </strong></a>

                        </div>
                    </div>
                </article> <!-- card-group-item.// -->

            </div>
        </aside>
            </div>


        <div class="row ">
            @foreach (var item in Model)
            {
                <div class="border mb-5 mx-3 pt-3 pb-3" style="border-radius:20px">
                    <div class="col-lg-4 col-md-6 col-sm-10 offset-md-0 offset-sm-1">

                        <div class="card">
                            <div class="image d-flex">


                                <div class="img-hover-zoom img-hover-zoom--xyz">
                                    @*<a asp-action="Details" asp-route-id="@item.Id">*@
                                    <a asp-action="Details" asp-route-id="@item.Id">
                                        <img class="card-img-top img-fluid" src="@Html.DisplayFor(modelItem => item.Picture)" alt="Another Image zoom-on-hover effect">
                                    </a>
                                </div>


                            </div>
                            <div class="card-body">


                                <a asp-action="Details" asp-route-id="@item.Id"><h5>@Html.DisplayFor(modelItem => item.AttractionName) </h5></a>
                                <h6>    @Html.DisplayFor(modelItem => item.CategoryName)</h6>
                                <div>
                                    @if ((this.User.Identity.IsAuthenticated) && (this.User.IsInRole("Administrator")))
                                    {
                                        <a asp-action="Edit" asp-route-id="@item.Id">@*<img src="~/images/edit.png" width="25">*@ Edit</a>
                                    }
                                    @*<a asp-action="Details" asp-route-id="@item.Id"><img src="~/images/details.png" width="40" /></a>*@
                                    @if ((this.User.Identity.IsAuthenticated) && (this.User.IsInRole("Administrator")))
                                    {

                                        <a asp-action="Delete" asp-route-id="@item.Id">@*<img src="~/images/delete.svg" width="25" />*@ Delete</a>
                                    }
                                </div>

                            </div>
                        </div>

                    </div>
                </div>
            }
        </div>

    </section>














