<section id="products">
    <div class="container">

        <div class="row mb-5">
            @foreach (var item in Model)
            {
                <div class="border mb-5 mx-3 pt-3" style="border-radius:20px">
                    <div class="col-lg-4 col-md-6 col-sm-10 offset-md-0 offset-sm-1">

                        <div class="card">
                            <div class="image d-flex">
                               
                                
                                <div class="img-hover-zoom img-hover-zoom--xyz">
                                    @*<a asp-action="Details" asp-route-id="@item.Id">*@
                                    <a asp-action="Details" asp-route-id="@item.Id">
                                         <img class="card-img-top" src="@Html.DisplayFor(modelItem => item.Picture)" alt="Another Image zoom-on-hover effect">
                                    </a>  </div>
                                
                              
                            </div>
                            <div class="card-body">


                                <a asp-action="Details" asp-route-id="@item.Id"><h5>@Html.DisplayFor(modelItem => item.AttractionName) </h5></a>
                                <h6>    @Html.DisplayFor(modelItem => item.CategoryName)</h6>
                                <div>
                                    @if ((this.User.Identity.IsAuthenticated) && (this.User.IsInRole("Administrator")))
                                    {
                                        <a asp-action="Edit" asp-route-id="@item.Id">@*<img src="~/images/edit.png" width="25">*@ edit</a>
                                    }
                                    @*<a asp-action="Details" asp-route-id="@item.Id"><img src="~/images/details.png" width="40" /></a>*@
                                    @if ((this.User.Identity.IsAuthenticated) && (this.User.IsInRole("Administrator")))
                                    {

                                        <a asp-action="Delete" asp-route-id="@item.Id">@*<img src="~/images/delete.svg" width="25" />*@ delete</a>
                                    }
                                </div>

                            </div>
                        </div>

                    </div>
                </div>
            }
        </div>
    </div>
</section>














