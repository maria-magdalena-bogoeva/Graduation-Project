
@model BulgariaApp.Models.Excursion.ExcursionDetailsVM

@{
    ViewData["Title"] = "Details";
}


<style>
    .black-button .red-button .blue-button .yellow-button {
        padding: 0;
        border: none;
        background: none;
    }

    body {
        background-color: #192d50;
    }
    h1 {
        color: #d6c3a5;
    }
    p {
        font-size: 20px;
        color: #d6c3a5;
    }
    .p{
        color:white;
        
    }
    span{
        color:white;
    }
    .desc {
        color: #d6c3a5;
    }
</style>
<h1 class="pb-5 pt-5 text-center">Details</h1>



<body>

    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6 col-lg-6 ">
                <div class="card-img left-side-product-box">
                    <img class="card-img img-fluid left-side-product-box change image" src="@Html.DisplayFor(model=>model.Picture)" alt="Image" />


                </div>
            </div>


            <div class="col-lg-6 col-md-6 right-side-pro-detail">
                <h1 class="m-0 p-0 h1">@Html.DisplayFor(model => model.ExcurionName)</h1>
                <p class="m-0 pt-1 price-pro p font-italic " style="">BGN @Html.DisplayFor(model => model.Price)</p>
                <p class="pt-2 p font-italic" style="font-size:20px">Discount: @Html.DisplayFor(model => model.Discount) %</p>
                <p class="pt-2 p font-italic" style="font-size:20px">Attraction: @Html.DisplayFor(model => model.AttractionName) </p>
                <p class="pt-2 p font-italic" style="font-size:20px">Availiable places: @Html.DisplayFor(model => model.MaxVisitors) </p>
                <div class="p"style="font-size:20px">
                    <a asp-action="Index">Back to List</a> <br />
                    @if ((this.User.Identity.IsAuthenticated) && (this.User.IsInRole("Administrator")))
                    {
                        <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                    }<br />
                    @if ((this.User.Identity.IsAuthenticated) && (this.User.IsInRole("Administrator")))
                    {

                        <a asp-action="Delete" asp-route-id="@Model.Id">Delete @*<img src="~/images/delete.svg" width="25" />*@</a>
                    }
                    
                </div>
                <div class="container mt-5">
                    <main role="main" class="pb-3">

                        <div class="container-fluid">
                            <ul class="nav nav-tabs">
                                <li class="nav-item"><a class="nav-link" data-toggle="tab" href="#rSWA">Duration</a></li>
                                <li class="nav-item"><a class="nav-link active" data-toggle="tab" href="#rLocal">Details</a></li>
                                <li class="nav-item"><a class="nav-link" data-toggle="tab" href="#rrEPRA">Pictures</a></li>
                                <li class="nav-item"><a class="nav-link" data-toggle="tab" href="#ppp">Map</a></li>

                            </ul>
                            <div>
                                <div class="tab-content">
                                    <div role="tabpanel" class="tab-pane fade" id="rSWA">
                                        <br />
                                        <div class="card" style="width: 100%;">

                                            <div class="card-body" style="background-color: #25447a">
                                                <p>
                                                    <strong>Start Date:</strong> <span>@Html.DisplayFor(model => model.StartDate)</span>
                                                </p>
                                                <p>
                                                    <strong>End Date:</strong> <span>@Html.DisplayFor(model => model.EndDate)</span>
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                    <div role="tabpanel" class="tab-pane active" id="rLocal">
                                        <br />
                                        <div class="card" style="width: 100%; background-color: #25447a">

                                            <div class="card-body">
                                                <p>
                                                    <span class="desc">
                                                        @Html.DisplayFor(model => model.Description)
                                                    </span>
                                                </p>
                                            </div>
                                        </div>
                                    </div>

                                    <div role="tabpanel" class="tab-pane fade" id="rrEPRA">
                                        <br />
                                        <div class="card" style="width: 100%;">

                                            <div class="card-body" style="background-color: #25447a ">

                                                <div class="button-container">
                                                    @*<button class="black-button">
                                                <img src="@Html.DisplayFor(model => model.Picture)" alt="Image" width="100" />
                                            </button>
                                            <button class="red-button">
                                                <img src="@Html.DisplayFor(model => model.Picture1)" alt="Image" width="100" />
                                            </button>
                                            <button class="blue-button">
                                                <img src="@Html.DisplayFor(model => model.Picture2)" alt="Image" width="100" />
                                            </button>
                                            <button class="yellow-button">
                                                <img src="@Html.DisplayFor(model => model.Picture3)" alt="Image" width="100" />
                                            </button>*@


                                                    @*<img src="@Html.DisplayFor(model => model.Picture)" alt="Image" width="100" />
                                            <img src="@Html.DisplayFor(model => model.Picture1)" alt="Image" width="100" />
                                            <img src="@Html.DisplayFor(model => model.Picture2)" alt="Image" width="100" />
                                            <img src="@Html.DisplayFor(model => model.Picture3)" alt="Image" width="100" />*@

                                                    <div style="width:100%;height:300px;">
                                                        <img class="img-fluid" src="@Html.DisplayFor(model => model.Picture)" alt="Norway" style="float: left; width: 50%; height: 100%; object-fit: cover; border:2px solid black">
                                                        <img class="img-fluid" src="@Html.DisplayFor(model => model.Picture1)" alt="Paris" style="float: left; width: 50%; height: 100%; object-fit: cover;  border: 2px solid black ">
                                                        <img class="img-fluid" src="@Html.DisplayFor(model => model.Picture2)" alt="Norway" style="float: left; width: 50%; height: 100%; object-fit: cover;  border: 2px solid black ">
                                                        <img class="img-fluid" src="@Html.DisplayFor(model => model.Picture3)" alt="Paris" style="float: left; width: 50%; height: 100%; object-fit: cover;  border: 2px solid black ">

                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                    </div>

                                    <div role="tabpanel" class="tab-pane fade" id="ppp">
                                        <br />
                                        <div class="card" style="width: 650px; background-color: #25447a;">

                                            <div class="card-body">
                                                <p class="mb-4 text-center">
                                                    Where it is located?
                                                </p><iframe src="@Html.DisplayFor(model => model.Picture4)" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                                            </div>
                                        </div>
                                    </div>


                                </div>
                            </div>
                        </div>
                    </main>
                </div>

            </div>
        </div>
    </div>







    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <script>
    jQuery(document).ready(function($){

        $('.black-button').on({
             'click': function(){
                 $('#change-image').attr('src','@Html.DisplayFor(model=>model.Picture)');
             }
         });

        $('.red-button').on({
             'click': function(){
                $('#change-image').attr('src','@Html.DisplayFor(model=>model.Picture1)');
             }
         });

        $('.blue-button').on({
             'click': function(){
                 $('#change-image').attr('src','@Html.DisplayFor(model=>model.Picture2)');
             }
         });

        $('.yellow-button').on({
             'click': function(){
                 $('#change-image').attr('src','@Html.DisplayFor(model=>model.Picture3)');
             }
         });
        });

    </script>

































  
</body>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

